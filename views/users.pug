extends layout

block content
  .main.my-4
    .row.justify-content-center
      .col-md-8
        .table-responsive-sm
          table.table.table-striped
            thead
              tr
                th #
                th id
                th timestamp
                th(width='30')
            tbody
              if (users)
                each user, index in users
                  tr
                    td.align-middle= index+1
                    td.align-middle= user.userId
                    td.align-middle= moment(user.timestamp).format("YYYY-MM-DD hh:mm:ss")
                    td.align-middle
                      form(method='POST' action="/"+index)
                        button.btn.btn-outline-danger.btn-sm(type='submit') 刪除